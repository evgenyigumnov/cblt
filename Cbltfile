"*:80" {
    reverse_proxy "/http/*" "http://127.0.0.1:8080"  "http://127.0.0.1:8081" {
      lb_interval "60s"
      lb_timeout "1s"
      lb_retries "2"
      lb_policy "round_robin"  //  "ip_hash"
}
    root "*" "./assets"
    file_server
}
"*:443" {
    root "*" "./assets"
    file_server
    tls "domain.crt" "domain.key"
}
"*:8082" {
    root "*" "./book"
    redirifnotcookie "_oauth2_proxy" "/oauth2/start"
    file_server
}
